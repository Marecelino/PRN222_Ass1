@model IEnumerable<HotelBooking.DAL.Models.RoomType>

@{
    ViewData["Title"] = "Room Types";
    Layout = "_Layout";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Room Types</h2>
        <a asp-action="CreateRoomType" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add New Room Type
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Type Name</th>
                            <th>Description</th>
                            <th>Max Occupancy</th>
                            <th>Price Per Night</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.TypeName</td>
                                <td>@item.Description</td>
                                <td>@item.MaxOccupancy</td>
                                <td>@item.PricePerNight.ToString("C")</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="EditRoomType" asp-route-id="@item.RoomTypeId" class="btn btn-sm btn-outline-primary">Edit</a>
                                        <form asp-action="DeleteRoomType" asp-route-id="@item.RoomTypeId" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this room type?');">
                                            <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
